page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 自定义upload */

.title {
  margin-top: 20rpx;
}

.uploader {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 500rpx;
  height: 300rpx;
  margin: 50rpx;

  font-size: 100rpx;

  background-color: #fff;
  border: 1px dashed #aaa;
}

/* weui upload */
.upload .weui-uploader {
  display: flex;
  flex-direction: column;
  align-items: center;

  padding: 20rpx;
}

.weui-uploader__input-box,
.weui-uploader__img,
.weui-active {
  background-color: #fff;
  width: 500rpx;
  height: 300rpx;
  border: 1px dashed #aaa;
}

.box {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #aaa;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;

  margin-top: 50rpx;

  width: 60vw;
  height: 100rpx;
  background-color: #f80;

  font-size: 34rpx;
  color: #fff;
}

.progress-box {
  display: flex;
  flex-direction: column;
  color: #fff;
}

.progress-box .desc-box {
  display: flex;
  justify-content: center;
}
