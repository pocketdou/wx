.pop-up {
  width: 100%;
}

.pop-up .mask {
  width: 100vw;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
}

.pop-up .content {
  z-index: 999999;
  width: 80%;

  overflow-y: scroll;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx;
}
