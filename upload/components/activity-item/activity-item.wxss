.home-activity-item {
  display: flex;
  align-items: center;
  border-radius: 15rpx;
  background-color: #fff;
  border: 1px solid #eee;
  margin-bottom: 50rpx;
  box-shadow: 5px 5px 10px #c3c3c3, -5px -5px 10px #fdfdfd;
  padding: 20rpx 0 20rpx 20rpx;
  overflow: hidden;
}

.home-activity-item .cover {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.home-activity-item .desc {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
}

.home-activity-item .desc .info .title {
  font-size: 32rpx;
  font-weight: 600;
}

.home-activity-item .desc .info .time,
.home-activity-item .desc .info .user,
.home-activity-item .desc .info .address {
  display: flex;
  font-size: 24rpx;
  color: #a5a4a4;
  align-items: center;
}

.home-activity-item .desc .time-icon {
  width: 28rpx;
  margin-right: 10rpx;
}

.home-activity-item .desc .status {
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  background-color: #f80;
  color: #fff;
}

.home-activity-item .desc .my-order {
  display: flex;
  flex-direction: column;
}

.my-action .certificate {
  background-color: #f80;
  padding: 10rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  color: #fff;
}

.my-action .qrcode {
  background-color: #f0f9eb;
  border: 1px solid #67c23a;
  padding: 10rpx;
  border-radius: 20rpx;
  color: #67c23a;
}
